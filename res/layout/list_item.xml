<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/img_orang"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:contentDescription="@string/pesan_tmp"
        android:scaleType="fitXY"
        android:src="@drawable/kelenteng_sam_po_kong" />

    <TextView
        android:id="@+id/nama_orang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_orang"
        android:layout_marginStart="20dp"
        android:layout_marginTop="19dp"
        android:layout_toEndOf="@id/img_orang"
        android:text="@string/nama_tmp"
        android:textSize="21sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pesan_orang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nama_orang"
        android:layout_marginStart="20dp"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@id/img_orang"
        android:text="@string/psn"
        android:textSize="15sp" />

</RelativeLayout>